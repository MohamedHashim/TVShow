    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.4"
            android:background="@color/background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/textView_explanation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Scan NFC Card"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:paddingTop="25dp"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/UID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guest Name "
                    android:textAllCaps="false"
                    android:id="@+id/a1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textAllCaps="false"
                    android:textColor="@color/bluedigital"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name "
                    android:textAllCaps="false"
                    android:id="@+id/a2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:textAllCaps="false"
                    android:textColor="@color/bluedigital"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Table No "
                    android:id="@+id/a3"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/table_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/bluedigital"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendee Type "
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:id="@+id/a4"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/attendee_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="40dp"

                    android:textColor="@color/bluedigital"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Name "
                    android:textAllCaps="false"
                    android:id="@+id/a5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/event_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:textAllCaps="false"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/bluedigital"
                    android:textSize="@dimen/text_size_large" />

            </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:id="@+id/send"
            android:layout_marginBottom="25dp"
            android:text="Send Data"/>
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/progressbar_height_width"
        android:layout_height="@dimen/progressbar_height_width"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />


</LinearLayout>